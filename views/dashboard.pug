extends layout 

block content
  div(id='header')
    a(class='logo' href='/') Fakturownia
    div(id='accountControls')
      p
        | Użytkownik: 
        a(href='/uzytkownik')
          span(class='iconSpace')
            i(class='fa-solid fa-user')
          | #{user.username}
      span |
      p
        a(href='/log-out')
          span(class='iconSpace')
            i(class='fa-solid fa-power-off')
          | Wyloguj się
    div(class='bars')
      i(class='fa-solid fa-bars')

  div(id='wrapper')
    div(id='leftPanel')
      div(class='centerVert menuItem' onclick='location.href="/wystaw-fakture";')
        span(class='iconSpace')
          i(class="fa-regular fa-file-lines")
        span Wystaw fakturę
      div(class='centerVert menuItem' onclick='location.href="/";')
        span(class='iconSpace')
          i(class="fa-solid fa-list")
        span Lista faktur


    div(id='main')
      block main