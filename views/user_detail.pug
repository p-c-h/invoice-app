extends dashboard 

block main

  if errors
    ul 
      for error in errors 
        li!=error.msg 

  div(class='marginBottomMd') Dane użytkownika: 
    span(class='highlight') #{user.username}

  form(action='' method='POST')
    div(class='inlineBlock')
      div(class='gridTwoCol marginBottomMd')
        div(class='mbMobile justifyEndAlignRight')    
          label(for='firstName') Imię:
        div(class='mbMobile')
          input(type='text' name='firstName' id='firstName' required value=user.firstName)

        div(class='mbMobile justifyEndAlignRight')
          label(for='surname') Nazwisko:
        div(class='mbMobile')
          input(type='text' name='surname' id='surname' required value=user.surname)

        div(class='mbMobile justifyEndAlignRight')
          label(for='businessName') Nazwa firmy: 
        div(class='mbMobile')
          input(type='text' name='businessName' id='businessName' required value=user.businessName)

        div(class='mbMobile justifyEndAlignRight')
          label(for='nip') NIP:
        div(class='mbMobile')
          input(type='number' name='nip' id='nip' required value=user.nip)

        div(class='mbMobile justifyEndAlignRight')
          label(for='adress') Adres:
        div(class='mbMobile')
          input(type='text' name='adress' id='adress' required value=user.adress)

        div(class='mbMobile justifyEndAlignRight')
          label(for='areaCode') Kod pocztowy: 
        div(class='mbMobile')  
          input(type='text' name='areaCode' id='areaCode' pattern='[0-9]{2}(-)[0-9]{3}' required value=user.areaCode)

        div(class='mbMobile justifyEndAlignRight')
          label(for='city') Miejscowość:
        div(class='mbMobile')  
          input(type='text' name='city' id='city' required value=user.city)

        div(class='mbMobile justifyEndAlignRight')
          label(for='bankAccountNumber') Numer konta: 
        div(class='mbMobile')  
          input(type='number' name='bankAccountNumber' id='bankAccountNumber' required value=user.bankAccountNumber)

      button(type='submit' class='flatButton marginAuto') Zapisz